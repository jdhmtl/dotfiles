" ========== Vundle Config ==========

set nocompatible
filetype off

" Because I can never remember Vundle commands:
"
" :PluginInstall
" :PluginList
" :PluginClean
" :PluginSearch foo

set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()

Plugin 'gmarik/Vundle.vim'
Plugin 'airblade/vim-gitgutter'
Plugin 'bling/vim-airline'
Plugin 'ctrlpvim/ctrlp.vim'
Plugin 'edsono/vim-matchit'
Plugin 'jwalton512/vim-blade'
Plugin 'mattn/emmet-vim'
Plugin 'rking/ag.vim'
Plugin 'rstacruz/sparkup'
Plugin 'scrooloose/nerdtree'
Plugin 'scrooloose/syntastic'
Plugin 'tpope/vim-commentary'
Plugin 'tpope/vim-fugitive'
Plugin 'tpope/vim-surround'

call vundle#end()
filetype plugin indent on

" ========== General Config ==========

syntax on	" Enable syntax highlighting

set number
set relativenumber

colorscheme xoria256

set lazyredraw
set ttyfast

set cursorline
set laststatus=2 " Make sure airline is always on

set backspace=indent,eol,start " Make backspace behave normally

" ========== Search Settings ==========

set incsearch	" Search as we type
set hlsearch	" Highlight search results
set nowrapscan  " Stop search at end of file

" ========== Turn off swap files ==========

set noswapfile
set nobackup

" ========== Persistent Undo ==========

set hidden

" ========== Indentation ==========

set autoindent
set smartindent
set expandtab
set smarttab

set tabstop=4
set shiftwidth=4
set softtabstop=4

set linebreak	" Wrap lines at convenient places

" Show tabs and end of line characters
set listchars=tab:▸\ ,eol:¬,space:·

hi NonText ctermfg=244
hi SpecialKey ctermfg=244

" ========== Split Windows ==========

set splitbelow
set splitright

nnoremap <C-H> <C-W><C-H>
nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>

" ========== FileType Specific Indentations  ==========

" Not yet implemented but, rather than using ~/.vim/after/ftplugin, autocmd
" can be used. For example:
"
" autocmd FileType yaml setlocal ts=2 sw=2 sts=2 expandtab
"
" Also, coerce extensions into certain filetypes:
"
" autocmd BufNewFile,BufRead *.ctp setfiletype php

augroup syntaxhighlighting
  au!
  au BufRead,BufNewFile *.twig set filetype=htmljinja
augroup END

" ========== Auto Commands ==========

" Automatically source .vimrc when making changes to it
augroup autosourcing
  au!
  au BufWritePost .vimrc source $MYVIMRC
augroup END

" ========== Plugin Configuration ==========

let NERDTreeHijackNetrw = 0

" Load Powerline fonts
let g:airline_powerline_fonts = 1
let g:airline_theme = 'tomorrow'
set noshowmode " Don't need showmode when using Airline

let g:gitgutter_sign_column_always = 1

" Gives a nice performance boost to CtrlP
let g:ctrlp_use_cache = 1
let g:ctrlp_clear_cache_on_exit = 0

" ========== Basic Key Mappings ==========

" CtrlP with current directory as a base
nmap <Leader>p :execute 'CtrlP' getcwd()<CR>
nmap <Leader>b :CtrlPBuffer<CR>
nmap <C-T> :CtrlPBufTag<CR>
nmap <C-M> :CtrlPMRUFiles<CR>
nmap <Leader>s :SyntasticToggleMode<CR>
nmap <silent><Leader>[ :bp!<CR>
nmap <silent><Leader>] :bn!<CR>
nmap <silent><Leader>c :let @/ = ""<CR>
nmap <silent><Leader>n :NERDTreeToggle<CR>

" Toggle display of invisibles
nmap <silent><Leader>l :set list!<CR>

" ========== Allow Local .vimrc ==========

set exrc
set secure
