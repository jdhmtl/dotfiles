" ========== Vundle Config ==========

" Unnecessary in Vim 8
" set nocompatible
filetype off

" Because I can never remember Vundle commands:
"
" :PluginInstall
" :PluginUpdate
" :PluginList
" :PluginClean
" :PluginSearch foo

set rtp+=/usr/local/opt/fzf
set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()

Plugin 'gmarik/Vundle.vim'
Plugin 'airblade/vim-gitgutter'
Plugin 'itchyny/lightline.vim'
Plugin 'junegunn/fzf.vim'
Plugin 'tpope/vim-fugitive'
Plugin 'dense-analysis/ale'

Plugin 'morhetz/gruvbox'

call vundle#end()
filetype plugin indent on

" ========== General Config ==========

syntax on   " Enable syntax highlighting

set number
set relativenumber

" Let's try using true colors
set termguicolors

colorscheme gruvbox

set lazyredraw
set ttyfast

set laststatus=2 " Make sure airline is always on
set noshowmode " Don't need showmode when using Airline

set backspace=indent,eol,start " Make backspace behave normally
set wildmenu

" ========== Search Settings ==========

set incsearch   " Search as we type
set hlsearch    " Highlight search results
set nowrapscan  " Stop search at end of file

" ========== Turn off swap files ==========

set noswapfile
set nobackup

" ========== Persistent Undo ==========

set hidden
set undofile
set undodir=~/.vim/undo

" ========== Indentation ==========

set autoindent
set smartindent
set expandtab
set smarttab

set tabstop=4
set shiftwidth=4
set softtabstop=4

set linebreak   " Wrap lines at convenient places

" Show tabs and end of line characters
set listchars=tab:▸\ ,trail:·,nbsp:…
set list

" ========== Split Windows ==========

set splitbelow
set splitright

" ========== FileType Specific Indentations  ==========

" Coerce extensions into certain filetypes:

augroup syntaxhighlighting
  au!
  au BufRead,BufNewFile *.twig set filetype=htmljinja
augroup END

" ========== Auto Commands ==========

" Automatically source .vimrc when making changes to it
augroup autosourcing
  au!
  au BufWritePost .vimrc source $MYVIMRC
  au BufWritePost vimrc source $MYVIMRC
augroup END

" ========== Plugin Configuration ==========

let g:netrw_banner = 0
let g:netrw_liststyle = 3
let g:netrw_sizestyle = "H"

let g:gitgutter_sign_column_always = 1

let g:lightline = { 'colorscheme': 'gruvbox' }

let g:jsx_ext_required = 0

" ========== Basic Key Mappings ==========

nmap <silent><Leader>[ :bp!<CR>
nmap <silent><Leader>] :bn!<CR>
nmap <silent><Leader>c :let @/ = ""<CR>

" Toggle display of invisibles
nmap <silent><Leader>l :set list!<CR>
nmap <silent><Leader>w :set wrap!<CR>

" FZF
nmap <silent><Leader>p :Files<CR>
nmap <silent><Leader>b :Buffers<CR>

" ========== Allow Local .vimrc ==========

set exrc
set secure
