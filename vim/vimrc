" ========== External Apps ==========

set rtp+=/opt/homebrew/opt/fzf

" ========== UI Settings ==========

syntax on   " Enable syntax highlighting

set termguicolors

colorscheme dark_plus

set number
set relativenumber
set cursorline

set lazyredraw
set ttyfast

set laststatus=2 " Make sure airline is always on
set noshowmode " Don't need showmode when using Airline

set backspace=indent,eol,start " Make backspace behave normally
set wildmenu

" ========== Search Settings ==========

set incsearch   " Search as we type
set hlsearch    " Highlight search results
set nowrapscan  " Stop search at end of file

" ========== Turn off swap files ==========

set noswapfile
set nobackup

" ========== Persistent Undo ==========

set hidden
set undofile
set undodir=~/.vim/undo

" ========== Indentation ==========

filetype plugin indent on

set autoindent
set smartindent
set expandtab
set smarttab

set tabstop=4
set shiftwidth=4
set softtabstop=4

set linebreak   " Wrap lines at convenient places
set textwidth=120

" Show tabs and end of line characters
set listchars=tab:▸\ ,trail:·,nbsp:…
set list

" ========== Split Windows ==========

set splitbelow
set splitright

" ========== Basic Key Mappings ==========

nmap <silent><Leader>[ :bp!<CR>
nmap <silent><Leader>] :bn!<CR>
nmap <silent><Leader>c :let @/ = ""<CR>
nmap <silent><Leader>w :set wrap!<CR>

" Toggle display of invisibles
nmap <silent><Leader>l :set list!<CR>

" FZF
nmap <silent><Leader>p :Files<CR>
nmap <silent><Leader>b :Buffers<CR>
nmap <silent><Leader>t :Tags<CR>
nmap <silent><Leader>r :BTags<CR>

nmap <silent><Leader>g :Git blame<CR>

" ========== Auto Commands ==========

" Automatically source .vimrc when making changes to it
augroup autosourcing
  au!
  au BufWritePost .vimrc source $MYVIMRC
  au BufWritePost vimrc source $MYVIMRC
augroup END

" ========== Allow Local .vimrc ==========

set exrc
set secure

" ========== Plugin Settings ==========

" Netrw
let g:netrw_banner = 0
let g:netrw_liststyle = 3
let g:netrw_sizestyle = 'H'

" Lightline
let g:lightline = { 'colorscheme': 'one' }

" Ag
let g:ag_prg="ag -U --ignore .git --ignore tags --vimgrep"

" Ale
let g:ale_sign_error = '●'
let g:ale_sign_warning = '.'

let g:ale_linters_explicit = 1
let g:ale_fixers = { '*': ['trim_whitespace'] }

" ========== Generate Help Files ==========
packloadall
silent! helptags ALL

set grepprg=ag\ --vimgrep
