# Aliases

alias cd=" cd"
alias ls=" ls -G"
alias ll=" ls -lh"

alias ..=" cd ..; ls"
alias ...=" cd ../..; ls"
alias ....=" cd ../../..; ls"

alias grep="grep --color=auto"
alias gl="git log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"

alias pt="echo $PATH | tr ':' '\n'"
